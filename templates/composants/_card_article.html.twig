<h1>Titre article</h1>
<h2>Image</h2>
<h3>Date de l'article</h3>
<div class="flex flex-col bg-white border shadow-sm rounded-xl dark:bg-slate-900 dark:border-gray-700 dark:shadow-slate-700/[.7]">
  <img class="w-full h-auto rounded-t-xl" src="{{ article.urlImg }}" alt="Image Description">
  <div class="p-4 md:p-5">
    <h3 class="text-lg font-bold text-gray-800 dark:text-white">
      {{ article.titre }}
    </h3>
    <p class="mt-5 text-xs text-gray-500 dark:text-gray-500">
      {{ article.dateCreation | date("d m Y") }}
    </p>
    <p class="mt-5 text-xs text-gray-700 dark:text-gray-700">
      <a href="{{ path('app_article_id', { id:article.id }) }}">Détail</a>
    </p>
    <p class="mt-5 text-xs text-gray-700 dark:text-gray-700">
      <a href="{{ path('app_update_article', { id:article.id }) }}">Modifier</a>
    </p>
  </div>
</div>

